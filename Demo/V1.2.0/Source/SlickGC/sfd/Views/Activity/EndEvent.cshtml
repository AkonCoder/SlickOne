@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>事件属性编辑</title>
    <style type="text/css">
        .parentRow {
            width: 500px;
            height: 16px;
            margin-right: 10px;
            margin-bottom: 25px;
        }

        .childColumn {
            float: left;
            margin-right: 5px;
        }
    </style>

</head>
<body>
    <!-- Modal -->
    <div class="modal-body">
        <div class="row">
            <p>
                <span class="a_tit">名称:</span>
                <span><input type="text" id="txtActivityName" class="form-control" style="width:340px;" /></span>
            </p>
            <p>
                <span class="a_tit">代码:</span>
                <span><input type="text" id="txtActivityCode" class="form-control" style="width:340px;" /></span>
            </p>
            <p>
                <span class="a_tit">描述:</span>
                <span><input type="text" id="txtDescription" class="form-control" style="width:340px;" /></span>
            </p>
            <p>
                <span class="a_tit">结束期限:</span>
                <span><input type="text" id="txtDeadline" placeholder="1M20D3H45m" class="form-control" style="width: 340px;" /></span>
            </p>
            <p>
                <span class="a_tit">示例:</span>
                <span>  2M10D3H45m,表示流程启动后的2个月10天3小时45分钟</span>
            </p>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" data-dismiss="modal" onclick="eventproperty.saveEndEvent();">确定</button>
        <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
    </div>

    <script type="text/javascript">
        $(function () {
            //load activity information
            eventproperty.loadEndEvent();
        });
    </script>
</body>
</html>